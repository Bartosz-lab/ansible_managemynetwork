---
machine:
  network:
    hostname: "{{ host_controlplane.name }}"
    interfaces:
    - deviceSelector:
        busPath: "0*"
      addresses:
{% if host_controlplane.ip4 is defined %}
{% for ip4 in host_controlplane.ip4 %}
        - "{{ ip4 }}"
{% endfor %}
{% endif %}
{% if host_controlplane.ip6 is defined %}
{% for ip6 in host_controlplane.ip6 %}
        - "{{ ip6 }}"
{% endfor %}
{% endif %}
